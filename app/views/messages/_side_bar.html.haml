.side-bar
  .side-bar__user-name
    .top-items
      .top-items__name
        = current_user.name
      .top-items__icon
        = link_to new_group_path, class: 'edit' do
          = icon('far','edit', class: 'edit')
        = link_to edit_user_path(current_user) do
          = icon('fas','cog', class: 'setting')
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-box
        = link_to group_messages_path(group) do
          .group-box__group-name
            = group.name
          .group-box__message
            = group.show_last_message
